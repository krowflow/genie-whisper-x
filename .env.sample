# Genie Whisper X - Environment Configuration Sample
# Copy this file to .env and configure your settings

# =============================================================================
# API KEYS (OPTIONAL - for cloud features only)
# =============================================================================

# OpenAI API Key (optional - for cloud-enhanced intent parsing and chat)
# Obtain from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-your-openai-api-key-here

# Porcupine Wake Word API Key (optional - for advanced wake word detection)
# Obtain from: https://console.picovoice.ai/
# PORCUPINE_ACCESS_KEY=your-porcupine-access-key-here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Voice Activity Detection sensitivity (0.0 to 1.0)
VAD_SENSITIVITY=0.6

# Whisper model size (tiny, base, small, medium, large)
WHISPER_MODEL_SIZE=tiny

# WebSocket server configuration
WEBSOCKET_HOST=localhost
WEBSOCKET_PORT=8765

# TTS engine (piper, edge-tts, pyttsx3)
TTS_ENGINE=piper

# TTS voice model (for Piper: en_US-lessac-medium, en_US-amy-medium, etc.)
TTS_VOICE=en_US-lessac-medium

# TTS voice speed (0.5 to 2.0)
TTS_SPEED=1.0

# Wake word phrase (customize your trigger)
WAKE_WORD=Hey Genie

# Wake word response (what Genie says when wake word detected)
WAKE_WORD_RESPONSE=Yes, Master

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable development mode features
DEV_MODE=true

# Hot reload for backend modules
HOT_RELOAD=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Disable network access completely (local-only mode)
OFFLINE_MODE=true

# Require confirmation for system commands
REQUIRE_CONFIRMATION=true

# Log voice data (for debugging - disable in production)
LOG_AUDIO_DATA=false

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Audio buffer size (samples)
AUDIO_BUFFER_SIZE=1024

# Audio sample rate (Hz)
AUDIO_SAMPLE_RATE=16000

# Max recording duration (seconds)
MAX_RECORDING_DURATION=30

# =============================================================================
# UI SETTINGS
# =============================================================================

# UI theme (dark, light, auto)
UI_THEME=auto

# Show advanced controls
SHOW_ADVANCED_UI=false

# Waveform visualization
ENABLE_WAVEFORM=true